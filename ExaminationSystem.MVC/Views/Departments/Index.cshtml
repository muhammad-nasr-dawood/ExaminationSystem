@model List<ExaminationSystem.MVC.ViewModels.DepartmentViewModels.DepartmentViewModel>

@{
	ViewData["Title"] = "Departments";
}

<style>
	/* ðŸ‘‡ Hover circle only on the 3-dots button */
	.btn-icon {
		background-color: transparent;
		border: none;
		box-shadow: none;
		padding: 0;
		width: 36px;
		height: 36px;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background-color 0.2s ease;
		border-radius: 50%;
	}

		.btn-icon:hover {
			background-color: rgba(0, 0, 0, 0.08);
		}
</style>

<div class="row g-4">
	@foreach (var dept in Model)
	{
		<div class="col-lg-4 col-md-6">
			<div class="card shadow-lg border-0 rounded-3 h-100 position-relative">
				<div class="card-body p-4 d-flex flex-column justify-content-between">

					<!-- 3 dots menu button with hover circle -->
					<div class="dropdown position-absolute top-0 end-0 m-3">
						<button class="btn btn-icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="ti ti-dots-vertical"></i>
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item text-warning" asp-action="Edit" asp-route-id="@dept.Id">
									<i class="ti ti-pencil me-2"></i>Edit
								</a>
							</li>
							<li>
								<a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@dept.Id">
									<i class="ti ti-trash me-2"></i>Delete
								</a>
							</li>
						</ul>
					</div>

					<!-- Card content -->
					<div>
						<h5 class="fw-bold text-primary mb-2">@dept.Name</h5>
						<p class="text-muted mb-2">Description: <strong>@dept.Disc</strong></p>
						<p class="text-muted mb-2">Capacity: <strong>@dept.Capacity</strong></p>
					</div>

					<div class="mt-3">
						<span class="badge px-3 py-2 rounded-pill @(dept.IsDeleted ? "bg-danger" : "bg-success") text-white">
							@(dept.IsDeleted ? "Deleted" : "Active")
						</span>
					</div>
				</div>
			</div>
		</div>
	}
</div>
