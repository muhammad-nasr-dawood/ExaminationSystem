@model ExaminationSystem.MVC.ViewModels.BranchViewModels.BranchEditViewModel

@{
    ViewData["Title"] = "Edit Branch";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    @* Hidden field for the Branch ID *@
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label for="ZipCode" class="form-label">Location (Zip Code)</label>
        <select id="ZipCode" name="ZipCode" class="form-select" required>
            <option value="" disabled selected>Select a location</option>
            @foreach (var location in Model.Locations)
            {
                <option value="@location.ZipCode" /@(location.ZipCode == Model.ZipCode ? "selected" : "")>
                    @location.LocationName
                </option>
            }
        </select>
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="StreetNo" class="form-label">Street Number</label>
        <input type="text" class="form-control" id="StreetNo" name="StreetNo" value="@Model.StreetNo" required />
        <span asp-validation-for="StreetNo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
