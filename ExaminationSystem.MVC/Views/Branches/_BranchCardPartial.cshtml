@model BranchViewModel

<div class="col-lg-4 col-md-6" id="branch-@Model.Id">
	<div class="card shadow-lg border-0 rounded-3 h-100">
		<div class="card-body p-4 d-flex flex-column justify-content-between">
			<div>
				<h5 class="fw-bold text-primary mb-2 locName">@Model.LocationName Branch</h5>
				<p class="text-muted mb-1">Street No: <strong class="streetNo">@Model.StreetNo</strong></p>

				<div class="d-flex justify-content-between align-items-center mb-1">
					<p class="text-muted mb-0 branch-manager">
						Manager: <strong>@(string.IsNullOrEmpty(Model.BranchManagerName) ? "Not Assigned" : Model.BranchManagerName)</strong>
					</p>
					<button class="btn btn-sm btn-outline-primary assign-branch-btn" data-id="@Model.Id">
						<i class="bi bi-pencil-fill"></i>
						@((string.IsNullOrEmpty(Model.BranchManagerName) || Model.BranchManagerName == "Not Assigned") ? "Assign Manager" : "Change Manager")
					</button>
				</div>

				<div class="d-flex justify-content-start mb-1 mt-2">
					<p class="text-muted mb-0 flex-grow-1">
						Departments: <strong class="number-of-departments">@Model.NumberOfDepartments</strong>
					</p>

					<div class="d-flex justify-content-end mb-2">
						<button class="btn btn-sm btn-outline-danger delete-manager-btn @((string.IsNullOrEmpty(Model.BranchManagerName) || Model.BranchManagerName == "Not Assigned") ? "hide-delete-button" : "show-delete-button")" data-id="@Model.Id">
							<i class="bi bi-trash"></i> Delete Manager
						</button>
					</div>
				</div>
			</div>

			<div class="d-flex justify-content-between mt-2 mb-2 gap-3">
				<a href="/Branches/ShowDepartments?branchId=@Model.Id" class="btn btn-primary btn-sm w-50">
					Show Departments
				</a>
				<a href="/Branches/ShowBranchStaff?branchId=@Model.Id" class="btn btn-secondary btn-sm w-50">
					Show Staff
				</a>
			</div>

			<div class="dropdown position-absolute top-0 end-0 m-3">
				<button class="btn btn-icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					<i class="ti ti-dots-vertical"></i>
				</button>
				<ul class="dropdown-menu">
					<li>
						<a class="dropdown-item text-warning edit-branch-btn" href="javascript:void(0);" data-id="@Model.Id">
							<i class="ti ti-pencil me-2"></i>Edit
						</a>
					</li>
					<li>
						<a class="dropdown-item text-danger" href="javascript:void(0);" data-id="@Model.Id" id="deleteBranchBtn">
							<i class="ti ti-trash me-2"></i>Delete
						</a>
					</li>
				</ul>
			</div>

			<div class="mt-3 d-flex align-items-center justify-content-between">
				<span class="badge px-3 py-2 rounded-pill bg-success text-white">Active</span>
				<small class="text-secondary">Location Code: <strong class="location">@Model.ZipCode.ToUpper()</strong></small>
			</div>
		</div>
	</div>
</div>
