@model List<ExaminationSystem.MVC.ViewModels.BranchViewModels.BranchViewModel>

<div class="row g-4">
	@foreach (var branch in Model.Where(b => !b.IsDeleted))
	{
		<div class="col-lg-4 col-md-6" id="branch-@branch.Id">
			<div class="card shadow-lg border-0 rounded-3 h-100">
				<div class="card-body p-4 d-flex flex-column justify-content-between">
					<div>
						<h5 class="fw-bold text-primary mb-2 locName">@branch.LocationName</h5>
						<p class="text-muted mb-1">Street No: <strong class="streetNo">@branch.StreetNo</strong></p>
						<p class="text-muted mb-1">Manager: <strong>@branch.BranchManagerName</strong></p>
						<p class="text-muted mb-1">
							Departments: <strong>@branch.NumberOfDepartments</strong>
							<div class="d-flex justify-content-end">
								<button class="btn btn-info btn-sm" type="button">
									Show Departments
								</button>
							</div>
						</p>
					</div>



					<div class="d-flex align-items-center mb-3">
						<button class="btn btn-sm btn-outline-primary edit-branch-btn" data-id="@branch.Id">
							<i class="bi bi-pencil-fill"></i>
							@(branch.BranchManagerName == "Not Assigned" ? "Assign Manager" : "Change Manager")
						</button>
					</div>

					<div class="dropdown position-absolute top-0 end-0 m-3">
						<button class="btn btn-icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="ti ti-dots-vertical"></i>
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item text-warning edit-branch-btn" href="javascript:void(0);" data-id="@branch.Id">
									<i class="ti ti-pencil me-2"></i>Edit
								</a>
							</li>
							<!-- For triggering the delete modal -->
							<li>
								<a class="dropdown-item text-danger" href="javascript:void(0);" data-id="@branch.Id" id="deleteBranchBtn">
									<i class="ti ti-trash me-2"></i>Delete
								</a>
							</li>



						</ul>
					</div>

					<div class="mt-3 d-flex align-items-center justify-content-between">
						<span class="badge px-3 py-2 rounded-pill bg-success text-white">
							Active
						</span>
						<small class="text-secondary ">Location Code: <strong class="location">@branch.ZipCode.ToUpper()</strong></small>
					</div>
				</div>
			</div>
		</div>

	}
</div>

<!-- Modal container where modal will be injected -->
<div id="modalContainer"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
 <!-- Include Bootstrap 5 CSS -->
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"> *@

<!-- Include Bootstrap 5 Bundle JS (includes Popper.js) -->
@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>  *@

<script>
	$(document).ready(function () {
		
		$(".edit-branch-btn").on('click', function (e) {
			e.preventDefault();
			var branchId = $(this).data("id");

			
			$.ajax({
				type: "GET",
				url: '@Url.Action("Edit", "Branches")/' + branchId,
				success: function (data) {
					
					$('#modalContainer').html(data);

					
					var modal = new bootstrap.Modal(document.getElementById('editBranchModal-' + branchId));
					modal.show(); 
				},
				error: function () {
					alert("An error occurred while loading the modal.");
				}
			});
		});
	// When the "Delete" button in the dropdown is clicked
		$(".dropdown-item.text-danger").on('click', function (e) {
			e.preventDefault();

			var branchId = $(this).data("id"); // Get branch ID

			// Make the AJAX call to load the delete modal
			$.ajax({
				type: "GET",
				url: '@Url.Action("Delete", "Branches")/' + branchId, 
				success: function (data) {
					$('#modalContainer').html(data);
					// Dynamically set the data-id attribute for the delete button
					$("#confirmDeleteBtn").data("id", branchId); 
					var deleteModal = new bootstrap.Modal(document.getElementById('deleteBranchModal'));
					deleteModal.show();
				},
				error: function () {
					alert("An error occurred while loading the modal.");
				}
			});
		});
	});
	
</script>
