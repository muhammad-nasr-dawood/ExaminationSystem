@using ExaminationSystem.MVC.ViewModels.Questions
@model AddMCQQuestionVM
@{
    ViewData["Title"] = "Add MCQ Question";
    Layout = "_HorizontalLayout";
}


@section PageScripts {
    <script src="~/js/form-input-group.js"></script>
    <script>
        $(document).ready(function() {
            let answerCount = 3;
            
            // Add new answer field
            $('#addAnswer').click(function() {
                answerCount++;
                const newAnswer = `
                    <div class="mb-3 answer-container">
                        <div class="d-flex gap-3">
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="correctAnswer" value="${answerCount - 1}">
                            </div>
                            <div class="flex-grow-1">
                                <input type="text" class="form-control answer-input" placeholder="Enter answer ${answerCount}" required>
                            </div>
                            <button type="button" class="btn btn-icon btn-outline-danger remove-answer">
                                <i class="ti ti-x"></i>
                            </button>
                        </div>
                    </div>`;
                $('#answersContainer').append(newAnswer);
            });

            // Remove answer field
            $(document).on('click', '.remove-answer', function() {
                if ($('.answer-container').length > 3) {
                    $(this).closest('.answer-container').remove();
                    updateAnswerIndices();
                } else {
                    Swal.fire({
                        title: 'Cannot Remove',
                        text: 'Minimum 3 answers are required',
                        icon: 'warning',
                        customClass: {
                            confirmButton: 'btn btn-primary'
                        },
                        buttonsStyling: false
                    });
                }
            });

            // Form submission
            $('#addQuestionForm').on('submit', function(e) {
                e.preventDefault();
                
                const answers = [];
                $('.answer-input').each(function() {
                    answers.push($(this).val());
                });

                const formData = {
                    Content: $('.message-input').val(),
                    Answers: answers,
                    AnswerIndex: $('input[name="correctAnswer"]:checked').val(),
                    Level: $('#questionLevel').val(),
                    TopicId: $('#topicSelect').val(),
                    StaffId: 40404040404040 // Replace with actual staff ID
                };

                if (!formData.AnswerIndex) {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Please select the correct answer',
                        icon: 'error',
                        customClass: {
                            confirmButton: 'btn btn-danger'
                        },
                        buttonsStyling: false
                    });
                    return;
                }

                $.ajax({
                    url: '@Url.Action("AddMCQQuestion", "Questions")',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Question added successfully',
                            icon: 'success',
                            customClass: {
                                confirmButton: 'btn btn-success'
                            },
                            buttonsStyling: false
                        }).then(() => {
                            window.location.reload();
                        });
                    },
                    error: function(xhr) {
                        Swal.fire({
                            title: 'Error!',
                            text: xhr.responseText,
                            icon: 'error',
                            customClass: {
                                confirmButton: 'btn btn-danger'
                            },
                            buttonsStyling: false
                        });
                    }
                });
            });
        });
    </script>
}

<div class="card mb-6">
    <h5 class="card-header">Add MCQ Question</h5>
    <div class="card-body">
        <form id="addQuestionForm">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Topic</label>
                    <select id="topicSelect" class="form-select" required>
                        <option value="">Select Topic</option>
                        @foreach (var topic in ViewBag.Topics)
                        {
                            <option value="@topic.Id">@topic.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Question Level</label>
                    <select id="questionLevel" class="form-select" required>
                        <option value="">Select Level</option>
                        <option value="0">Easy</option>
                        <option value="1">Intermediate</option>
                        <option value="2">Hard</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Question Content</label>
                <div class="input-group input-group-merge form-send-message">
                    <input type="text" class="form-control message-input" 
                           placeholder="Enter your question" 
                           required
                           minlength="30">
                    <span class="message-actions input-group-text">
                        <i class="ti ti-microphone cursor-pointer speech-to-text"></i>
                    </span>
                </div>
            </div>

            <div id="answersContainer">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="mb-3 answer-container">
                        <div class="d-flex gap-3">
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="correctAnswer" value="@i" required>
                            </div>
                            <div class="flex-grow-1">
                                <input type="text" class="form-control answer-input" placeholder="Enter answer @(i + 1)" required>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mb-3">
                <button type="button" id="addAnswer" class="btn btn-outline-primary">
                    <i class="ti ti-plus me-1"></i>Add Answer
                </button>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <span class="ti-xs ti ti-plus me-1"></span>Add Question
                </button>
            </div>
        </form>
    </div>
</div>
