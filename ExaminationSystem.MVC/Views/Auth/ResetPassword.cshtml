@model ResetPasswordViewModel



@{
	Layout = "_BlankLayout";
	ViewData["Title"] = "Reset Password";
}

@section VendorStyles {
	<link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/form-validation.css" />
}

@section VendorScripts {
	<script src="~/vendor/libs/&#64;form-validation/popular.js"></script>
	<script src="~/vendor/libs/&#64;form-validation/bootstrap5.js"></script>
	<script src="~/vendor/libs/&#64;form-validation/auto-focus.js"></script>
}

@section PageStyles {
	<link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

@* ************** Content ************** *@
<div class="container-xxl">
	<div class="authentication-wrapper authentication-basic container-p-y">
		<div class="authentication-inner py-6">
			<!-- Reset Password -->
			<div class="card">
				<div class="card-body">
					<!-- Logo -->
					<div class="app-brand justify-content-center mb-6">
						<a href="/" class="app-brand-link">
							<span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
							<span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
						</a>
					</div>
					<!-- /Logo -->
					<h4 class="mb-1">Reset Password ðŸ”’</h4>
					@* <p class="mb-6"><span class="fw-medium">Your new password must be different from previously used passwords</span></p> *@
					<form id="formAuthentication"  method="POST">
						<input type="hidden" asp-for="Token" />
						<input type="hidden" asp-for="Email" />
						<div class="mb-6 form-password-toggle">
							<label class="form-label" asp-for="NewPassword">New Password</label>
							<div class="input-group input-group-merge">
								<input type="password" asp-for="NewPassword" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
								<span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
							</div>
							<span asp-validation-for="NewPassword" class="text-danger"></span>
						</div>
						<div class="mb-6 form-password-toggle">
							<label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
							<div class="input-group input-group-merge">
								<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
								<span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
							</div>
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<button class="btn btn-primary d-grid w-100 mb-6">
							Set new password
						</button>
						<div class="text-center">
							<a href="/Auth/LoginCover">
								<i class="ti ti-chevron-left scaleX-n1-rtl me-1_5"></i>
								Back to login
							</a>
						</div>
					</form>
				</div>
			</div>
			<!-- /Reset Password -->
		</div>
	</div>
</div>

@section PageScripts {
	<script src="~/js/pages-auth.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

	<script>
				$(document).ready(function () {

				$("form").validate();
				$("form input").keyup(function() {
					$(this).valid();// enforce validation
				});
		});
  </script>
}
