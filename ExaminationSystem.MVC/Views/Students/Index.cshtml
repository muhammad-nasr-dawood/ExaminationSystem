			// Search filter
			$('#searchTerm').on('input', function () {
				table.search($(this).val()).draw();
			});

			// Dropdown filters
			$('#branchFilter, #departmentFilter, #statusFilter').change(function () {
				table.draw();
			});
		});





				function confirmDelete(studentId) {
			Swal.fire({
				title: 'Are you sure?',
				text: "You won't be able to revert this!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, delete it!'
			}).then((result) => {
				if (result.isConfirmed) {
					$.ajax({
						url: `/Students/Delete/${studentId}`,
						type: 'POST',
						success: function (response) {
							if (response.success) {
								$('#studentTable').DataTable().ajax.reload();
								Swal.fire(
									'Deleted!',
									'Student member has been deleted.',
									'success'
								);
							} else {
								Swal.fire(
									'Error!',
									response.message || 'Failed to delete student member.',
									'error'
								);
							}
						},
						error: function () {
							Swal.fire(
								'Error!',
								'An error occurred while deleting the student member.',
								'error'
							);
						}
					});
				}
			});
		}
