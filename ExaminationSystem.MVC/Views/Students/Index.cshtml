				function confirmDelete(studentId) {
			Swal.fire({
				title: 'Are you sure?',
				text: "You won't be able to revert this!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, delete it!'
			}).then((result) => {
				if (result.isConfirmed) {
					$.ajax({
						url: `/Students/Delete/${studentId}`,
						type: 'POST',
						success: function (response) {
							if (response.success) {
								$('#studentTable').DataTable().ajax.reload();
								Swal.fire(
									'Deleted!',
									'Student member has been deleted.',
									'success'
								);
							} else {
								Swal.fire(
									'Error!',
									response.message || 'Failed to delete student member.',
									'error'
								);
							}
						},
						error: function () {
							Swal.fire(
								'Error!',
								'An error occurred while deleting the student member.',
								'error'
							);
						}
					});
				}
			});
		}


		$('#SelectedBranchId').on('change', function () {
		const branchId = $(this).val();
		const $departmentDropdown = $('#SelectedDepartmentId');

		$departmentDropdown.empty().append('<option value="">-- Select Department --</option>');

		if (!branchId) {
			$departmentDropdown.prop('disabled', true);
			return;
		}

		$.ajax({
			url: '/Students/GetDepartmentsByBranch',
			type: 'GET',
			data: { branchId: branchId },
			success: function (departments) {
				departments.forEach(function (dept) {
					$departmentDropdown.append(
						$('<option>', {
							value: dept.id,
							text: dept.name
						})
					);
				});
				$departmentDropdown.prop('disabled', false);
				},
				error: function () {
					alert('Failed to load departments.');
					$departmentDropdown.prop('disabled', true);
				}
		  });
	  });




